<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="-----Ürün Ekle-----"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün Adı:" />

        <EditText
            android:id="@+id/edit_adiSoyadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textwew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:text="Ürün Adedi:" />

        <EditText
            android:id="@+id/edit_telno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.44"
            android:inputType="number"
            android:ems="10" >


        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/texView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            android:text="Kategori:" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >


        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_yeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Yeni"
            android:background="#ccf4564a"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_ekle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:text="Ekle"
            android:background="#f4584c"
            android:textColor="#ffffff" />

    </LinearLayout>

    <Button
        android:layout_width="431dp"
        android:layout_height="wrap_content"
        android:text="Liste"
        android:id="@+id/button_liste"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="#f3584c" />

    <Button
        android:layout_width="419dp"
        android:layout_height="wrap_content"
        android:text="Ürün Sil"
        android:id="@+id/button_sil"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="#f3584c" />

    <Button
        android:layout_width="439dp"
        android:layout_height="wrap_content"
        android:text="Ürün Güncelle"
        android:id="@+id/button_guncel"
        android:layout_weight="0.04"
        android:textColor="#f3584c"
        android:layout_gravity="center_horizontal" />

</LinearLayout>